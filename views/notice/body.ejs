<div class="wrapper">
  <div class="page-header page-header-xs" data-parallax="true" style="background-image: url('../assets/img/fabio-mangione.jpg');">
    <div class="filter"></div>
  </div>
  <div class="container">
    <div class="clear"></div>
    <h2>Notice</h2>
    <br />
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>No.</th>
          <th>Title</th>
          <th>Writer</th>
          <th>Date</th>
          <th>Views</th>
        </tr>
      </thead>
      <tbody>
        <% if (contents !== null){ for(var i =0; i< contents.length; i++) { %>
        <tr>
          <td>
            <%= i+1 %>
          </td>
          <td>
            <a href="/notice/view?id=<%= contents[i]._id %>">
              <%= contents[i].title %>
              파일:[
              <%=contents[i].fileUp.length%> ]</a>
          </td>
          <td>
            <%= contents[i].writer %>
          </td>
          <td>
            <%= contents[i].date %>
          </td>
          <td>
            <%= contents[i].count %>
          </td>
        </tr>
        <% } } else {%>
        <tr>
          <td colspan="5">게시물이 없습니다.</td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <br />
    <a class="btn btn-default pull-right" href="/write">Write</a>
    <div class="align-middle">
      <ul class="pagination">
        <li class="page-item disabled">
          <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item active">
          <a class="page-link" href="/notice?page=1">1<span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item">
          <% for(var i=1; i<pagination; i++){ %>
          <a class="page-link" href="/notice?page=<%=i+1%>">
            <%=i+1%></a>
          <%}%>
        </li>
      </ul>
    </div>
  </div>
</div>