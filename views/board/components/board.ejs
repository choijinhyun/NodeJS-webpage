<table class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th class="col-xs-1">No.</th>
      <th class="col-xs-6">제목</th>
      <th class="col-xs-2">작성자</th>
      <th class="col-xs-2">작성일</th>
      <th class="col-xs-1">조회수</th>
    </tr>
  </thead>
  <tbody>
    <% impContents.forEach(el => { %>
    <tr class="info">
      <td>공지</td>
      <td>
        <a href="/board/Detail_view?id=<%= el._id %>"> <%= el.title %></a>
      </td>
      <td><%= el.writer %></td>
      <td><%= el.date %></td>
      <td><%= el.count %></td>
    </tr>
    <% }); %> <% for (let i = 0; i < contents.length; i++) { %>
    <tr>
      <td><%= i + 1%></td>
      <td>
        <a href="/board/Detail_view?id=<%= contents[i]._id %>">
          <%= contents[i].title %></a
        >
      </td>
      <td><%= contents[i].writer %></td>
      <td><%= contents[i].date %></td>
      <td><%= contents[i].count %></td>
    </tr>
    <% } %>
  </tbody>
</table>
<br />
<div class="align-middle board-nav">
  <ul class="pagination">
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Previous</a>
    </li>
    <li class="page-item active">
      <a class="page-link" href="/board?page=1"
        >1<span class="sr-only">(current)</span></a
      >
    </li>
    <li class="page-item">
      <% for (let i = 1; i < pagination; i++) { %>
      <a class="page-link" href="/board?page=<%=i+1%>"> <%= i + 1 %></a> <% } %>
    </li>
  </ul>
  <% if (can_write) { %>
  <a class="btn btn-default pull-right" href="/board/posting">Write</a> <% } %>
</div>
