<div id="category_row">
  <a href="/board?boardNum=0"
    ><span class="category selected">공지사항</span></a
  >
  <a href="/board?boardNum=1"><span class="category">웹프로그래밍</span></a>
  <a href="/board?boardNum=2"
    ><span class="category">Advanced Operating System</span></a
  >
  <a href="/board?boardNum=3"><span class="category">종합설계</span></a>
  <a href="/board?boardNum=4"><span class="category">운영체제</span></a>
</div>
<style>
  #category_row {
    margin-bottom: 5% !important;
    padding-left: 15px;
    padding-right: 15px;
  }

  .category {
    padding: 12px 12px;
    margin-right: 12px;
    border-radius: 10px;
    cursor: pointer;
    display: inline-block;
    background-color: #fff;
    color: #333333;
    font-size: 1.1em;
    text-align: center;
    border: 1px solid #333333;
  }

  /* 해당 category 일때 */
  .category.selected {
    background-color: #6a639f !important;
    color: white !important;
  }
</style>
<script>
  $(document).ready(function() {
    var catg = document.querySelectorAll('.category');
    $('.category.selected').removeClass('selected');
    var boardNum = $.urlParam('boardNum');
    if (boardNum == null) boardNum = 0;
    switch (parseInt(boardNum)) {
      case 0:
        catg[0].classList.add('selected');
        console.log('공지사항');
        break;
      case 1:
        catg[1].classList.add('selected');
        console.log('웹 프로그래밍');
        break;
      case 2:
        catg[2].classList.add('selected');
        console.log('Advanced OS');
        break;
      case 3:
        catg[3].classList.add('selected');
        console.log('종합설계');
        break;
      case 4:
        catg[4].classList.add('selected');
        console.log('OS');
        break;
      default:
        console.log('error');
    }
  });
  /* Get a boardNum param */
  $.urlParam = function(name) {
    var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(
      window.location.href
    );
    if (results == null) return null;
    else return decodeURI(results[1]) || 0;
  };
</script>
